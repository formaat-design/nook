{
  "compilerOptions": {
    "target": "ES2015",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "incremental": true,
  },
  "exclude": ["node_modules"]
}
